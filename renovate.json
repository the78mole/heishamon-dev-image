{
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "platformio"
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Renovate Dependency Dashboard",
  "platformio": {
    "fileMatch": ["(^|/)platformio\\.ini(\\..*)?$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": "ðŸ“Œ Major Updates",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "ðŸ”§ Minor and Patch Updates",
      "automerge": true
    },
    {
      "matchManagers": ["platformio"],
      "matchUpdateTypes": ["major"],
      "groupName": "ðŸ”Œ PlatformIO Major Updates",
      "automerge": false,
      "labels": ["platformio", "major"]
    },
    {
      "matchManagers": ["platformio"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "âš¡ PlatformIO Minor/Patch Updates",
      "automerge": true,
      "labels": ["platformio", "minor-patch"]
    }
  ]
}
